{
	//Default .jshintrc at
	//https://github.com/jshint/jshint/blob/master/examples/.jshintrc

    // Enforcing
	    "eqeqeq"        : false,    // true: Require triple equals (===) for comparison

	    // http://stackoverflow.com/questions/14895217/jshint-ignore-use-to-compare-with
	    "-W041"			: false, 	// true: Special enforcing of === when comparing to '0

    // Relaxing
	    "asi"           : true,     // true: Tolerate Automatic Semicolon Insertion (no semicolons)
	    "funcscope"     : true,     // true: Tolerate defining variables inside control statements
	    "sub"           : true     // true: Tolerate bracket notation
}
